#!/usr/bin/env zsh
#
#
set -u -e -o pipefail
cd "$( dirname "$(realpath "$0")" )/.."
local +x THIS_DIR="$PWD"

local +x args="$@"

case "$args" in
  start)
    pwd
    set -x
    exec da keep running node src/FaunaDB.Query.Server.mjs
    ;;
  reload)
    set -x
    exec da reload running process
    ;;
  *)
    echo "!!! Invalid arguments: $args" >&2
    exit 2
    ;;
esac

